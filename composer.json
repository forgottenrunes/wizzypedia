{
    "name": "wizzypedia/mediawiki",
    "description": "Wizzypedia MediaWiki installation",
    "require": {
        "php": ">=7.4.0",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ext-ctype": "*",
        "ext-json": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-calendar": "*",
        "symfony/polyfill-mbstring": "^1.17",
        "symfony/polyfill-ctype": "^1.8",
        "aws/aws-sdk-php": "^3.67",
        "composer/installers": "^1.5"
    },
    "suggest": {
        "ext-redis": "For Redis caching support"
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "composer/installers": true,
            "wikimedia/composer-merge-plugin": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform-check": false
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "extensions/*/composer.json"
            ],
            "merge-dev": false,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-scripts": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer install --ignore-platform-req=ext-redis"
        ]
    }
}